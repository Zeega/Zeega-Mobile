[data-view]
  .message-overlay
    display:none
    top:0
    left:0
    position: fixed
    background-color: rgba(0,0,0,0.8)
    width: 100%
    height: 100%
    z-index: 100
    color: white
    
    .close
      position:absolute
      top: 20px
      right: 20px
      font-size: 2em

    .message
        padding:50px
        text-align: center

  .zeegas-wrapper
    margin-left: auto
    margin-right: auto
    width: 90%
    padding-bottom: 50px

  article
    -webkit-background-size: cover
    -moz-background-size: cover
    background-size: cover
    background-image: url(images/default_project_cover.png)
    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5)
    width: 100%
    height: 300px
    margin-bottom: 20px
    position: relative

    .info-overlay

        position: absolute
        bottom: 0
        left: 0
        right: 0
        background: rgba(0, 0, 0, 0.5)
        overflow-x:hidden;
        padding: 10px
        border-radius: 0 0 2px 2px
        color: white
        text-shadow: rgba(0, 0, 0, 0.498039) 2px 2px 12px

        .left-column
            float:left
            margin-right: 10px
            .profile-token
                border-radius: 28px
                height: 50px
                width: 50px
                overflow: hidden
                float: left
                border: 3px solid orangered
                img
                    width: 100%
        
        .right-column
            height: 56px
            position: relative
            float:left
            min-width: 200px;
            
            .profile-name
                font-size: 0.7em
                position: absolute
                width: 100%;
                bottom: 0
                a
                    text-decoration: none
                    color: orangered
                .zeega-views
                    padding-left: 10px
                    display: none

                    
            h1
                font-size: 0.9em
                margin: 0


    .mobile-play
        width: 150px
        height: 80px
        display: block
        top: 75px
        position: absolute
        left: 0
        right: 0
        margin: auto
        background: rgba(0, 0, 0, 0.5)
        border-radius: 50px
        padding: 5px 5px 3px 5px
        background-image: url(images/start-button.png)
        background-position: center;
        background-size: 93%;
        background-repeat: no-repeat;
        