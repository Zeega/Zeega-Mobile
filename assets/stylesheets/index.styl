@import 'base_view'
@import 'home_index_view'
@import 'user_index_view'

body
  margin:0
  width: 100%;
  overflow-x: hidden;
  font-family: Helvetica,sans-serif;
  
.slide
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 100%
  -webkit-transition: -webkit-transform .2s cubic-bezier(0.2,0.3,0.25,0.9);
  -moz-transition: -webkit-transform .2s cubic-bezier(0.2,0.3,0.25,0.9);
  -ms-transition: -webkit-transform .2s cubic-bezier(0.2,0.3,0.25,0.9);
  -o-transition: -webkit-transform .2s cubic-bezier(0.2,0.3,0.25,0.9);
  transition: -webkit-transform .2s cubic-bezier(0.2,0.3,0.25,0.9);
  -webkit-transform: translate3d(0,0,0);
  -moz-transform: translate3d(0,0,0);
  -o-transform: translate3d(0,0,0);
  transform: translate3d(0,0,0);
  
  &.nav-open
    height: 100%
    position: fixed
    display: inline;
    -webkit-transform: translate3d(200px,0,0);
    -moz-transform: translate3d(200px,0,0);
    -o-transform: translate3d(200px,0,0);
    transform: translate3d(200px,0,0);

  &.graph
    background: url(images/graphpaper.png)
    position: fixed
    z-index: 1

  &.content-overlay
    z-index: 3
    position: fixed
    display: none
    &.nav-open
      display: block


#content
    width: 100%
    z-index: 1
