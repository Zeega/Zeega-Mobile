[data-view]
  .zeegas-wrapper
    margin-left: auto
    margin-right: auto
    width: 90%
    padding-bottom: 50px;

  article
    -webkit-background-size: cover
    -moz-background-size: cover
    background-size: cover
    background-image: url(images/default_project_cover.png)
    box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.5)
    width: 100%
    height: 300px
    margin-bottom: 50px
    position: relative

    .info-overlay

        position: absolute
        top: 0
        left: 70px
        right: 20px
        background: rgba(0, 0, 0, 0.5)
        padding: 10px
        border-radius: 0 0 2px 2px
        color: white
        text-shadow: rgba(0, 0, 0, 0.498039) 2px 2px 12px

        h1
            font-size: 2em
            text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.5)
            margin: 0
        h2
            font-size: 1em
            opacity: 0.7
            margin-top: 10px
            text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.5)
        
        .profile-token
            border-radius: 28px
            height: 50px
            width: 50px
            overflow: hidden
            float: left
            border: 3px solid orangered
            img
                width: 100%
        
        .profile-name
            float: left
            position: relative
            padding: 18px 10px
            color: white

    .mobile-play
        width: 175px
        height: 97px
        display: block
        bottom: 50px
        position: absolute
        left: 0
        right: 0
        margin: auto
        background: rgba(0, 0, 0, 0.5)
        border-radius: 56px
        padding: 5px 5px 3px 5px
        background-image: url(images/start-button.png)
        background-position: center;
        background-size: 90%;
        background-repeat: no-repeat;
        